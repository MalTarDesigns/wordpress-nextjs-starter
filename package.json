{
  "name": "@maltardesigns/wordpress-nextjs-starter",
  "version": "1.0.0",
  "description": "Production-ready WordPress headless CMS starter built with Next.js 15, TypeScript, and comprehensive client-focused features. Enhanced with advanced BlockRenderer, testing suite, security features, and deployment automation for agencies and developers.",
  "private": false,
  "author": "MalTar Designs <contact@maltardesigns.com>",
  "homepage": "https://github.com/MalTarDesigns/wordpress-nextjs-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MalTarDesigns/wordpress-nextjs-starter.git"
  },
  "bugs": {
    "url": "https://github.com/MalTarDesigns/wordpress-nextjs-starter/issues"
  },
  "keywords": [
    "nextjs",
    "wordpress",
    "headless-cms",
    "graphql",
    "typescript",
    "react",
    "tailwindcss",
    "radix-ui"
  ],
  "scripts": {
    "dev": "next dev --turbo",
    "dev:codegen": "graphql-codegen --config codegen.ts && node ./add-ts-nocheck.js && npm run dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:full": "npm run codegen && npm run build",
    "build:static": "BUILD_STATIC=true npm run build:full",
    "build:production": "NODE_ENV=production npm run build:full",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.ts && node ./add-ts-nocheck.js",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "clean:hard": "npm run clean && rm -rf node_modules && npm install",
    "preview": "npm run build && npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:api": "jest --testPathPattern=__tests__/api",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:ci && npm run test:e2e",
    "validate-env": "echo 'Environment validation skipped during build'",
    "validate-env:production": "NODE_ENV=production npm run validate-env",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "vercel-build": "npm run build:full"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "lucide-react": "^0.542.0",
    "next": "^15.0.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.3.3",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@next/bundle-analyzer": "^15.0.0",
    "@next/env": "^15.5.2",
    "@playwright/test": "^1.48.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vercel/toolbar": "^0.1.41",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "msw": "^2.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.0",
    "webpack-bundle-analyzer": "^4.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}